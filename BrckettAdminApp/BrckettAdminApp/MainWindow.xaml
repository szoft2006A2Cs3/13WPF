<Window x:Class="BrckettAdminApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrckettAdminApp"
        mc:Ignorable="d"
        MinHeight="450"
        MinWidth="800"
        MaxHeight="450"
        MaxWidth="800"
        Title="MainWindow" Height="450" Width="800">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid x:Name="MainArea" Height="429">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50px"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="70px"></RowDefinition>
            </Grid.RowDefinitions>
            <Menu >
                <MenuItem Header="TABLES" x:Name="TablesMenu" FontSize="22">
                    <!--items will be added dynamically-->
                    
                </MenuItem>
            </Menu>

            <Button FontSize="22" Grid.Column="2" Grid.Row="0" x:Name="LogOutbtn" Click="LogOutbtn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">Log Out</Button>
            <ListBox Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" x:Name="DetailsListBox" SelectionChanged="DetailsListBox_SelectionChanged"></ListBox>
            <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="DetailedViewStuff">
                <Grid.RowDefinitions>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!-- Dynamic grid will be added -->
            </Grid>
            <Button x:Name="Createbtn" Grid.Column="0" Content="Create" Grid.Row="2" Click="Createbtn_Click" FontSize="30" FontFamily="Britannic Bold"></Button>
            <Button x:Name="Updatebtn" Grid.Column="1" Content="Update" Grid.Row="2" Click="Updatebtn_Click" FontSize="30"></Button>
            <Button x:Name="Deletebtn" Grid.Column="2" Content="Delete" Grid.Row="2" Height="70"  VerticalAlignment="Top" Click="Deletebtn_Click" FontSize="30"></Button>
        </Grid>
    </Grid>
</Window>
