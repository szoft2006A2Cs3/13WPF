<Window x:Class="BrckettAdminApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrckettAdminApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="MainArea">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50px"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="70px"></RowDefinition>
            </Grid.RowDefinitions>
            <Menu Grid.Column="0" Grid.Row="0" x:Name="MainMenu"></Menu>
            <Button Grid.Column="2" Grid.Row="0" x:Name="LogOutStuff"></Button>
            <ListBox Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" x:Name="PrimaryKeysListToSelectDatabaseRow"></ListBox>
            <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="DetailedViewStuff"></StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" x:Name="ActionsButtonStuff"></StackPanel>
        </Grid>
    </Grid>
</Window>
